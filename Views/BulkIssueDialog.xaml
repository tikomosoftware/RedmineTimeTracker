<Window x:Class="redmineSupTool.Views.BulkIssueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource BulkIssueTitle}" Height="600" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Label Parent ID -->
            <RowDefinition Height="Auto"/> <!-- TextBox Parent ID -->
            <RowDefinition Height="Auto"/> <!-- Label Description -->
            <RowDefinition Height="Auto"/> <!-- TextBox Description -->
            <RowDefinition Height="Auto"/> <!-- Label Titles -->
            <RowDefinition Height="*"/>    <!-- TextBox Titles (Flexible) -->
            <RowDefinition Height="Auto"/> <!-- ProgressBar -->
            <RowDefinition Height="Auto"/> <!-- Status Text -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource LabelParentIssueId}" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="ParentIssueIdTextBox" Margin="0,0,0,10" Padding="5"/>

        <TextBlock Grid.Row="2" Text="{DynamicResource LabelDescription}" Margin="0,0,0,5"/>
        <TextBox Grid.Row="3" x:Name="DescriptionTextBox" Margin="0,0,0,15" Padding="5" Height="60" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <TextBlock Grid.Row="4" Margin="0,0,0,5">
            <Run Text="{DynamicResource LabelIssueTitles}" FontWeight="Bold"/>
            <LineBreak/>
            <Run Text="{DynamicResource LabelIssueTitlesHelp}" Foreground="#007BFF" FontSize="11"/>
        </TextBlock>
        <Grid Grid.Row="5">
            <TextBox x:Name="IssueTitlesTextBox" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Padding="5"/>
            <TextBlock IsHitTestVisible="False" Text="{DynamicResource HintHierarchical}" 
                       Margin="10,5,0,0" Foreground="Gray" FontStyle="Italic">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=IssueTitlesTextBox}" Value="">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </Grid>

        <ProgressBar Grid.Row="6" x:Name="ProgressBar" Height="20" Margin="0,15,0,5" Visibility="Collapsed"/>
        <TextBlock Grid.Row="7" x:Name="StatusTextBlock" Margin="0,5,0,0" Foreground="#666666"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="CreateButton" Content="{DynamicResource BtnCreateIssues}" Padding="20,8" 
                    Click="CreateButton_Click" Background="#007BFF" Foreground="White" BorderThickness="0"/>
            <Button x:Name="CancelButton" Content="{DynamicResource BtnCancel}" Padding="20,8" Margin="10,0,0,0" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
