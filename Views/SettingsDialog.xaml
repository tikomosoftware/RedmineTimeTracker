<Window x:Class="redmineSupTool.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource SettingsTitle}" Height="250" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="{DynamicResource LabelRedmineUrl}" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="UrlTextBox" Margin="0,0,0,10"
                 Height="28" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="1" Text="{DynamicResource LabelApiKey}" VerticalAlignment="Center" Margin="0,0,0,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="ApiKeyTextBox" Margin="0,0,0,10"
                 Height="28" VerticalContentAlignment="Center"/>

        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="{DynamicResource LabelApiKeyWarning}"
                   FontSize="11" Foreground="#DC3545" Margin="0,0,0,5"/>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="{DynamicResource BtnTestConnection}" Width="100" Padding="5,8" Margin="0,0,10,0"
                    Background="#28A745" Foreground="White" BorderThickness="0"
                    Click="TestButton_Click"/>
            <Button Content="{DynamicResource BtnSave}" Width="80" Padding="5,8" Margin="0,0,10,0"
                    Background="#007BFF" Foreground="White" BorderThickness="0"
                    Click="SaveButton_Click"/>
            <Button Content="{DynamicResource BtnCancel}" Width="80" Padding="5,8"
                    Background="#6C757D" Foreground="White" BorderThickness="0"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
