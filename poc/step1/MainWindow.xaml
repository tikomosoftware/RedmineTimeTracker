<Window x:Class="redmineSupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redmine Support Tool" Height="350" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F7" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Redmine API Connection Test" 
                   FontSize="24" FontWeight="Bold" Foreground="#333333" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>
        
        <Button Grid.Row="1" x:Name="GetProjectsButton" 
                Content="Get Projects" 
                Click="GetProjectsButton_Click" 
                Padding="30,15" 
                FontSize="16"
                Background="#0078D4" Foreground="White" 
                BorderThickness="0"
                HorizontalAlignment="Center">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="4"/>
                </Style>
            </Button.Resources>
        </Button>
        
        <TextBlock Grid.Row="2" x:Name="StatusTextBlock" 
                   Text="Status: Ready" 
                   FontSize="14" Foreground="#666666"
                   Margin="0,20,0,10" HorizontalAlignment="Center"/>
        
        <Border Grid.Row="3" BorderBrush="#CCCCCC" BorderThickness="1" 
                Background="White" CornerRadius="4" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="OutputTextBox" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True"
                         BorderThickness="0"
                         Padding="10"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="Transparent"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
