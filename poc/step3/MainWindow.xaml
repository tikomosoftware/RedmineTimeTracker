<Window x:Class="redmineSupTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Redmine Support Tool" Height="700" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F7" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Projects Section -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Redmine API Connection Test" 
                       FontSize="24" FontWeight="Bold" Foreground="#333333" 
                       Margin="0,0,0,20" HorizontalAlignment="Center"/>
            
            <Button x:Name="GetProjectsButton" 
                    Content="Get Projects" 
                    Click="GetProjectsButton_Click" 
                    Padding="30,15" 
                    FontSize="16"
                    Background="#0078D4" Foreground="White" 
                    BorderThickness="0"
                    HorizontalAlignment="Center">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
        
        <!-- Time Entry Section -->
        <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                CornerRadius="4" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="作業時間登録" FontSize="20" FontWeight="Bold" 
                           Foreground="#333333" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Ticket ID -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="チケットID:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="TicketIdTextBox" 
                             Height="30" VerticalContentAlignment="Center"/>
                    
                    <!-- Hours -->
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="作業時間:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox Grid.Row="0" Grid.Column="4" x:Name="HoursTextBox" 
                             Height="30" VerticalContentAlignment="Center"/>
                    
                    <!-- Activity -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="作業分類:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox Grid.Column="0" x:Name="ActivityComboBox" 
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"
                                  Height="30"/>
                        <Button Grid.Column="2" x:Name="RefreshActivitiesButton" 
                                Content="↻" 
                                Click="RefreshActivitiesButton_Click"
                                Width="30" Height="30"
                                ToolTip="作業分類を更新"
                                Background="#F0F0F0"
                                BorderThickness="1"
                                BorderBrush="#CCCCCC"/>
                    </Grid>
                    
                    <!-- Spent On -->
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="作業日:" 
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker Grid.Row="2" Grid.Column="4" x:Name="SpentOnDatePicker" 
                                Height="30"/>
                    
                    <!-- Comments -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="コメント:" 
                               VerticalAlignment="Top" Margin="0,5,10,0"/>
                    <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4" 
                             x:Name="CommentsTextBox" 
                             Height="80" TextWrapping="Wrap" 
                             AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                    
                    <!-- Register Button -->
                    <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="5"
                            x:Name="RegisterTimeButton" 
                            Content="作業時間を登録" 
                            Click="RegisterTimeButton_Click" 
                            Padding="40,12" 
                            FontSize="16"
                            Background="#28A745" Foreground="White" 
                            BorderThickness="0"
                            HorizontalAlignment="Center">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Status -->
        <TextBlock Grid.Row="2" x:Name="StatusTextBlock" 
                   Text="Status: Ready" 
                   FontSize="14" Foreground="#666666"
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>
        
        <!-- Separator -->
        <Border Grid.Row="3" Height="1" Background="#DDDDDD" Margin="0,10"/>
        
        <!-- Output Area -->
        <Border Grid.Row="4" BorderBrush="#CCCCCC" BorderThickness="1" 
                Background="White" CornerRadius="4" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="OutputTextBox" 
                         TextWrapping="Wrap" 
                         IsReadOnly="True"
                         BorderThickness="0"
                         Padding="10"
                         FontFamily="Consolas"
                         FontSize="12"
                         Background="Transparent"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
